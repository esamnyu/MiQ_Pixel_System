{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://miqpixel.com/schemas/events/purchase.json",
  "title": "Purchase Event",
  "description": "Schema for purchase/conversion tracking events",
  "type": "object",
  "required": ["eventType", "timestamp", "siteId", "orderId", "value", "currency", "items"],
  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier"
    },
    "eventType": {
      "const": "purchase"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "siteId": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "minLength": 1,
      "maxLength": 100
    },
    "sessionId": {
      "type": "string",
      "maxLength": 100
    },
    "userId": {
      "type": "string",
      "description": "SHA-256 hashed user identifier",
      "pattern": "^[a-f0-9]{64}$"
    },
    "orderId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Unique order identifier for deduplication"
    },
    "value": {
      "type": "number",
      "minimum": 0,
      "maximum": 1000000000,
      "description": "Total order value"
    },
    "currency": {
      "type": "string",
      "pattern": "^[A-Z]{3}$",
      "description": "ISO 4217 currency code"
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "maxItems": 100,
      "items": {
        "type": "object",
        "required": ["id", "quantity", "price"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "name": {
            "type": "string",
            "maxLength": 200
          },
          "category": {
            "type": "string",
            "maxLength": 100
          },
          "brand": {
            "type": "string",
            "maxLength": 100
          },
          "variant": {
            "type": "string",
            "maxLength": 100
          },
          "quantity": {
            "type": "integer",
            "minimum": 1,
            "maximum": 10000
          },
          "price": {
            "type": "number",
            "minimum": 0,
            "maximum": 1000000
          }
        },
        "additionalProperties": false
      }
    },
    "tax": {
      "type": "number",
      "minimum": 0
    },
    "shipping": {
      "type": "number",
      "minimum": 0
    },
    "discount": {
      "type": "number",
      "minimum": 0
    },
    "coupon": {
      "type": "string",
      "maxLength": 50
    },
    "paymentMethod": {
      "type": "string",
      "maxLength": 50
    },
    "consent": {
      "$ref": "../entities/consent.schema.json"
    },
    "context": {
      "$ref": "#/definitions/eventContext"
    },
    "enhancedConversion": {
      "type": "object",
      "properties": {
        "emailHash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA-256 hash of normalized email"
        },
        "phoneHash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA-256 hash of normalized phone"
        },
        "firstName": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA-256 hash of normalized first name"
        },
        "lastName": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA-256 hash of normalized last name"
        },
        "addressHash": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "SHA-256 hash of normalized address"
        }
      },
      "additionalProperties": false
    }
  },
  "definitions": {
    "eventContext": {
      "type": "object",
      "properties": {
        "page": {
          "$ref": "../entities/page.schema.json"
        },
        "device": {
          "$ref": "../entities/device.schema.json"
        }
      }
    }
  },
  "additionalProperties": false
}